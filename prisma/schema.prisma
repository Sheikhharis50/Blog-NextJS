datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id    Int    @id @default(autoincrement())
  title String @unique
  body  String
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  first_name String
  last_name  String
  created_at DateTime @default(now())
}
